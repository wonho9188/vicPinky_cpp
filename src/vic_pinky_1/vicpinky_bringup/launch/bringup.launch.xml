<?xml version="1.0"?>
<launch>
    <!-- Arguments -->
    <arg name="use_sim_time" default="false"/>
    <arg name="filter_yaml_path" default="$(find-pkg-share vicpinky_bringup)/config/laser_filter.yaml"/>

    <!-- Include vicpinky_description launch -->
    <include file="$(find-pkg-share vicpinky_description)/launch/upload.launch.xml">
        <arg name="use_sim_time" value="$(var use_sim_time)"/>
    </include>

    <!-- Bringup node -->
    <node pkg="vicpinky_bringup" exec="bringup" name="vicpinky_bringup_node" output="screen">
        <param name="use_sim_time" value="$(var use_sim_time)"/>
    </node>

    <!-- Laser filter node -->
    <node pkg="laser_filters" exec="scan_to_scan_filter_chain" name="scan_filter_chain" output="screen">
        <param from="$(var filter_yaml_path)"/>
    </node>
</launch>